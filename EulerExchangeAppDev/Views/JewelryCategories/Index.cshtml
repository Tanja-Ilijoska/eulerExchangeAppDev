@*@model IEnumerable<EulerExchangeAppDev.Models.ViewModels.JewelryCategoriesViewModel> *@
@model PagedList.IPagedList<EulerExchangeAppDev.Models.ViewModels.JewelryCategoriesViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div style="display:table">
    @foreach (var item in Model)
    {
        <div style="float:left;width:200px">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            <br />

            <b>@Html.DisplayNameFor(model => model.First().Name):</b>
            @Html.DisplayFor(modelItem => item.Name)
            <br />

        </div>
    }
</div>
<div style="float:inherit">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>
